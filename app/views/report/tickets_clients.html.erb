<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Reporte Tickets por Agente
            </header>
            <div class="panel-body">
                <%= form_tag url_for(:controller => :report, :action => :tickets_clients), method: 'get', class: 'form-inline', role: 'form', 'data-ajax' => 'true', 'data-success' => 'after_generate_report', id: 'report_filter' do %>
                    <div class="form-group col-lg-4">
                        <label for="first_name" class="col-sm-3 control-label">Agente</label>
                        <div class="col-sm-9">
                            <select name="id" id="id" class="form-control">
                                <% for client in @clients%>
                                <option value="<%= client.id %>"><%= client.full_name %></option>
                                <% end %>
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="from" class="col-sm-3 control-label">Desde</label>
                        <div class="col-sm-9">
                            <%= date_picker_tag 'from', nil %>
                        </div>
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="to" class="col-sm-3 control-label">Hasta</label>
                        <div class="col-sm-9">
                            <%= date_picker_tag 'to', nil %>
                        </div>
                    </div>
                    <div class="form-group pull-right">
                        <div class="col-sm-offset-2 col-sm-10">
                            <%= submit_tag "Generar", class: 'btn btn-primary btn-lg' %>
                        </div>
                    </div>
                <% end %>
                <section id="flip-scroll">
                    <table class="table table-hover">
                        <tr class="error">
                            <td>No hay resultados que mostrar</td>
                        </tr>
                    </table>
                </section>
            </div>
        </section>
    </div>
</div>