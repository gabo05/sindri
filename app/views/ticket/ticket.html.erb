<section class="center col-lg-10 col-md-10 col-sm-12 col-xs-12">
	<div class="col-lg-12 col-md-12 col-sm-12 col-md-12">
        <div class="panel panel-warning">
            <div class="panel-heading">
            	<b>Ticket #<%= @ticket.id %></b>
            	<span class="label label-<%= @ticket.current_state.css_class%> pull-right"><%= @ticket.current_state.name %></span>
            </div>
            <div class="panel-body">
                <h4><b>Creada por:</b> <%= @ticket.client.full_name %></h4>
                <h4><b>Descripci&oacute;n</b></h4>
                <p><%= @ticket.description %></p>
                <% if @ticket.attachments.count > 0 %>
                <h5>Adjuntos</h5>
                <ul>
                	<% for attachment in @ticket.attachments %>
                	<li><a href="/attachments/<%= attachment.name %>"><%= attachment.name %></a></li>
                	<% end %>
                </ul>
                <% end %>
	        	<%= form_tag  url_for(:controller => :ticket, :action => :asign), method: 'post', class: 'form-horizontal', role: 'form' do %>
	            	<div class="form-group">
		                <label for="first_name" class="col-sm-2 control-label">Asignado a:</label>
		                <div class="col-sm-10">
		                	<select name="agent_id" id="agent_id" class="form-control">
		                		<% for agent in @agents %>
			                		<% if @ticket.is_asigned_to? agent %>
			                			<option selected value="<%= agent.id %>"><%= agent.full_name %></option>
			                		<% else %>
			                			<option value="<%= agent.id %>"><%= agent.full_name %></option>
			                		<% end %>
		                		<% end %>
		                	</select>
		                </div>
		            </div>
		            <%= hidden_field_tag "ticket_id", @ticket.id %>
		            <div class="btn-group pull-right">
		                <%= submit_tag 'Guardar', class: 'btn btn-primary'%>
		            </div>
	            <% end %>
	        </div>
        </div>
        <% for response in @responses %>
        <div class="panel panel-info">
			<div class="panel-body">
				<h4><%= response.account.full_name %></h4>
				<p><%= response.text %></p>
			</div>
		</div>
        <% end %>
        <%= form_for :tickets_response, :url => { :controller => "ticket", :action => "send_response" }, :html => {:class=>'form-horizontal', :role=>'form' } do |f| %>
        	<fieldset>
        		<legend>Enviar Mensaje</legend>
        		<div class="form-group">
                    <div class="col-sm-10">
                        <%= f.text_area :text, :class=>'form-control', :placeholder => 'Mensaje', :rows => '5' %>
                    </div>
                </div>
                <%= f.hidden_field :account_id, :value => @user.user_id %>
                <%= f.hidden_field :ticket_id, :value => @ticket.id %>
                <div class="form-group pull-right">
                    <div class="col-sm-offset-2 col-sm-10">
                        <%= f.submit :class => 'btn btn-primary btn-lg', :value => 'Enviar' %>
                    </div>
                </div>
        	</fieldset>
        <% end %>
    </div>
</section>