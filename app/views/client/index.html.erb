<section class="center col-lg-10 col-md-10 col-sm-12 col-xs-12">
    <h1>Clientes</h1>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr class="info">
                    <td>Nombre</td>
                    <td>Correo Electrónico</td>
                    <td>Telefono</td>
                    <td>Organizaci&oacute;n</td>
                    <td>Acciones</td>
                </tr>
            </thead>
            <tbody>
                <% if @emails.count == 0 %>
                <tr>
                    <td colspan="4">No hay registros que mostrar</td>
                </tr>
                <% else
                    for email in @emails %>
                    <tr>
                        <td><%= email.client.full_name %></td>
                        <td><%= email.email %></td>
                        <td><%= email.client.phone_number %></td>
                        <td><%= email.client.business.name%></td>
                        <td>
                            <div class="btn-group">
                                <a href="<%=url_for controller: "client", action: "edit", id: email.client.id %>" class="btn btn-default" title="Editar" rel="tooltip"><i class="glyphicon glyphicon-pencil"></i></a>
                                <a href="<%=url_for controller: "client", action: "delete", id: email.client.id %>" class="btn btn-default" title="Eliminar" rel="tooltip"><i class="glyphicon glyphicon-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                <% end 
                end%>
            </tbody>
        </table>
    </div>
    <% if @emails.count > 0 %>
    <nav>
        <ul class="pagination">
            <li><%= link_to raw("&laquo;"), controller: "client", action:"index", page: 1 %></li>
            <% 
                page = 1 
                until page > flash[:no_pages]
            %>
                <li><%= link_to page, controller: "client", action:"index", page: page %></li>
            <%
                    page+=1
                end
            %>
            <li><%= link_to raw("&raquo;"), controller: "client", action:"index", page: flash[:no_pages] %></li>
        </ul>
    </nav>
    <% end %>
    <div class="center col-lg-10 col-md-10 col-sm-12 col-xs-12">
        <%= render :partial => "shared/message" %>
        <%= form_tag url_for(:controller => :client, :action => :invite), method: 'post', class: 'form-horizontal', role: 'form' do %>
            <fieldset>
                <legend>Nuevo Cliente</legend>
                <div class="form-group">
                    <label for="password" class="col-sm-2 control-label">Nombre</label>
                    <div class="col-sm-10">
                        <%= text_field_tag 'first_name', nil, class: 'form-control', placeholder: 'Nombre' %>
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="col-sm-2 control-label">Apellido</label>
                    <div class="col-sm-10">
                        <%= text_field_tag 'last_name', nil, class: 'form-control', placeholder: 'Apellido' %>
                    </div>
                </div>
                <div class="form-group">
                    <label for="email" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        <%= email_field_tag 'email', nil, class: 'form-control', placeholder: 'Correo Electrónico' %>
                    </div>
                </div>
                <div class="form-group pull-right">
                    <div class="col-sm-offset-2 col-sm-10">
                        <%= submit_tag "Invitar", class: 'btn btn-primary btn-lg' %>
                    </div>
                </div>
            </fieldset>
        <% end %>
    </div>
</section>
