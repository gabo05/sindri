<!DOCTYPE html>
<html>
	<head>
        <title>Sindri - Helpdesk</title>
        <%= favicon_link_tag 'favicon.png' %>
        <%= stylesheet_link_tag    "bootstrap.min", :media => "all" %>
        <%= stylesheet_link_tag    "bootstrap-theme.min", :media => "all" %>
        <%= stylesheet_link_tag    "application", :media => "all" %>
        <%= render :partial => "styles" %>
        <%= csrf_meta_tags %>
	</head>
	<body>
		<div class="container">
			<header>
				<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
					<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
						<%= image_tag "/logos/#{@user.business_logo}", :alt => @user.business_name, :title => @user.business_name%>
						<h1><%= @user.business_name %></h1>
					</div>
					<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
						<nav class="navbar pull-right" role="navigation">
                            <div class="container-fluid">
                                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                                    <ul class="nav navbar-nav sindri-user">
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                <i class="glyphicon glyphicon-user"></i>
                                                <%= @user.full_name %> 
                                                <span class="caret"></span>
                                            </a>
                                            <ul class="dropdown-menu" role="menu">
                                                <li>
                                                    <%= link_to raw("<i class='glyphicon glyphicon-user'></i>Perfil"), controller: @user.type, action: "edit", id: @user.id %>
                                                </li>
                                                <li><a href="#"><i class="glyphicon glyphicon-pencil"></i>Cambiar Contrase&ntilde;a</a></li>
                                                <li class="divider"></li>
                                                <li>
                                                    <%= link_to raw("<i class='glyphicon glyphicon-off'></i>Cerrar Sesión"), controller: "account", action: "logout" %>
                                                </li>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </nav>
					</div>
				</div>
			</header>
			<nav class="navbar navbar-default" role="navigation">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#sindri-nav">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <!-- <a class="navbar-brand" href="#"><%=session[:user]['business_name'] %></a> -->
                    </div>
                    <div class="collapse navbar-collapse" id="sindri-nav">
                        <ul class="nav navbar-nav">
                            <% if @user.type == 'client' %>
                                <li><%= link_to @user.business_name, controller: "home", action: "index" %></li>
                            <% elsif @user.type == 'agent' %>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                                        <%= @user.business_name %> 
                                        <%if @businesses.count() > 0%>
                                            <span class="caret"></span>
                                        <%end%>
                                    </a>
                                    <%if @businesses.count() > 0%>
                                        <ul class="dropdown-menu" role="menu">
                                            <% for business in @businesses %>
                                                <li><%= link_to business.name, controller: "home", action: "index", id: business.id %></li>
                                            <% end %>
                                        </ul>
                                    <%end%>
                                </li>
                            <% end %>
                            <li><%= link_to "Inicio", controller: "home", action: "index" %></li>
                            <li><%= link_to "Tickets", controller: "ticket", action: "index" %></li>
                            <% if @user.is_in_role? 'agent' %>
                                <li><%= link_to "Planificacion", controller: "scheldule", action: "index" %></li>
                            <% end %>
                            <% if @user.is_in_role? 'admin' %>
                                <li><%= link_to "Agentes", controller: "agent", action: "index" %></li>
                                <li><%= link_to "Clientes", controller: "client", action: "index" %></li>
                                <li><%= link_to "Organizaciones", controller: "business", action: "index" %></li>
                            <% end %>
                            <% if @user.is_in_role? 'agent' or @user.is_in_role? 'admin' or @user.is_in_role? 'ticket_admin' %>
                                <li><%= link_to "Soluciones", controller: "solution", action: "index" %></li>
                            <% end %>
                            <li><%= link_to "Reportes", controller: "report", action: "index" %></li>
                            <% if @user.is_in_role? 'admin' %>
                                <li><%= link_to "Configuración", controller: "setting", action: "index" %></li>
                            <% end %>
                            <li><%= link_to "Acerca de...", controller: "home", action: "about" %></li>
                        </ul>
                    </div>
                </div>
			</nav>
			<%= yield %>
		</div>
        <%= javascript_include_tag "jquery.min" %>
		<%= javascript_include_tag "bootstrap.min" %>
		<%= javascript_include_tag "application" %>
        <%= render :partial => "scripts" %>
	</body>
</html>
