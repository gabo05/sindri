 <div class="center col-lg-10 col-md-10 col-sm-12 col-xs-12">
        <%= form_for :solution, :url => {:action => "create"}, :html => {:class=>'form-horizontal', :role=>'form'} do |f| %>
            <fieldset>
                <legend>Soluci&oacute;n</legend>
                <div class="form-group">
                    <label for="descripcion" class="col-sm-2 control-label">Descripci&oacute;n</label>
                    <div class="col-sm-10">
                        <%= f.text_field :title, :class=>'form-control', :placeholder => 'Descripción' %>
                    </div>
                </div>
                <div class="form-group">
                    <label for="description" class="col-sm-2 control-label">Descripci&oacute;n</label>
                    <div class="col-sm-10">
                        <%= f.text_area :description, :class=>'form-control', :placeholder => 'Descripción', :rows => '4' %>
                    </div>
                </div>
                <div class="form-group">
                    <label for="tittle" class="col-sm-2 control-label">T&iacute;tulo</label>
                    <div class="col-sm-10">
                        <%= f.text_field :titulo, :class=>'form-control', :placeholder => 'Título', :rows => '4' %>
                    </div>
                </div>
                <div class="form-group">
                    <label for="version" class="col-sm-2 control-label">Versi&oacute;n</label>
                    <div class="col-sm-10">
                        <%= f.text_field :version, :class=>'form-control', :placeholder => 'Versión' %>
                    </div>
                </div>
                <div class="form-group">
                    <label for="file" class="col-sm-2 control-label"> Adjuntos</label>
                    <div class="col-sm-10">
                        <%= f.file_field :title, :class=>'form-control', :placeholder => 'Adjunto' %>
                    </div>
                    
                </div>
                <div class="form-group pull-right">
                    <div class="col-sm-offset-2 col-sm-10">
                        <%= f.submit :class => 'btn btn-primary btn-lg', :value => 'Responder' %>
                    </div>
                </div>
            </fieldset>
        <% end %>
</div>