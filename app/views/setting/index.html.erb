<section class="center col-lg-8 col-md-8 col-sm-12 col-xs-12">
    <h1>Configuraci&oacute;n</h1>
    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingAccount">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseAccount" aria-expanded="true" aria-controls="collapseAccount">
                    Cuenta
                    </a>
              </h4>
            </div>
            <div id="collapseAccount" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingAccount">
                <div class="panel-body">
                    <%= form_for :account, :url => {:action => "update", :controller => "setting"}, :html => {:class=>'form-horizontal', :role=>'form'} do |f| %>
                        <div class="form-group">
                            <label for="picuture" class="col-sm-2 control-label">Foto</label>
                            <div class="col-sm-10">
                                <%= image_tag "avatar-default.png", :alt => "", :title => "Avatar"%>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Name" class="col-sm-2 control-label"> Nombre </label>
                            <div class="col-sm-10">
                                <%= f.text_field :admin, :class=>'form-control', :placeholder => 'Nombre' %> 
                            </div>    
                        </div>
                         <div class="form-group">
                            <label for="email" class="col-sm-2 control-label">Correo Electr&oacute;nico</label>
                            <div class="col-sm-10">
                                <%= f.text_area :admin, :class=>'form-control', :placeholder => 'Correo Electronico', :rows => "3" %>
                            </div>
                        </div>
                         <div class="form-group">
                            <label for="telefono" class="col-sm-2 control-label">Tel&eacute;fono</label>
                            <div class="col-sm-10">
                                <%= f.text_area :admin, :class=>'form-control', :placeholder => 'Telefono', :rows => "3" %>
                            </div>
                        </div>
                        <div class="form-group pull-right">
                            <div class="col-sm-10">
                                <%= f.submit :class => 'btn btn-primary btn-lg', :value => 'Guardar' %>
                            </div>
                        </div>
                    <%end%>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingBusiness">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseBusiness" aria-expanded="false" aria-controls="collapseBusiness">
                    Empresa
                    </a>
              </h4>
            </div>
            <div id="collapseBusiness" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingBusiness">
                <div class="panel-body">
                    <%= form_for :business, :url => {:action => "update", :controller => "business"}, :html => {:class=>'form-horizontal', :role=>'form'} do |f| %>
                        <div class="form-group">
                            <label for="name" class="col-sm-2 control-label">Nombre</label>
                            <div class="col-sm-10">
                                <%= f.text_field :name, :class=>'form-control', :placeholder => 'Nombre' %>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="picture" class="col-sm-2 control-label">Logo</label>
                            <div class="col-sm-10">
                                <%= f.file_field :picture, :class=>'form-control', :placeholder => 'Logo' %>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="colors" class="col-sm-2 control-label">Colores</label>
                            <div class="col-sm-10">
                                <%= f.text_field :color1, :class=>'form-control', :placeholder => 'color1' %>
                                 <%= f.text_field :color2, :class=>'form-control', :placeholder => 'color2' %>
                                 <%= f.text_field :color3, :class=>'form-control', :placeholder => 'color3' %>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="client" class="col-sm-2 control-label">Representante</label>
                            <div class="col-sm-10">
                                <%= f.text_field :client, :class=>'form-control', :placeholder => 'Cliente' %>
                            </div>
                        </div>
                        <div class="form-group pull-right">
                            <div class="col-sm-10">
                                <%= f.submit :class => 'btn btn-primary btn-lg', :value => 'Guardar' %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingManagment">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseManagment" aria-expanded="false" aria-controls="collapseManagment">
                    Administraci&oacute;n
                    </a>
                </h4>
            </div>
            <div id="collapseManagment" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingManagment">
                <div class="panel-body">
                    <%= form_for :settings, :url => {:action => "update"}, :html => {:class=>'form-horizontal', :role=>'form'} do |f| %>
                        <div class="form-group">
                            <label for="Name" class="col-sm-2 control-label">Asignaci&oacute;n de tickest</label>
                            <div class="col-sm-10">
                                <ul style="list-style-type:none; text-align:right; width:245px;">
                                    <li>
                                        <label>
                                            Administrador: <%= f.check_box :admin, data: { "on-text" => "SI", "off-text" => "NO"} %>
                                        </label>
                                    </li>
                                    <li>
                                        <label>
                                            Cliente: <%= f.check_box :client, data: { "on-text" => "SI", "off-text" => "NO"} %>
                                        </label>
                                    </li>
                                </ul>
                            </div>
                        </div>
                         <div class="form-group">
                            <label for="Notificatios" class="col-sm-2 control-label">Notificaciones por correo</label>
                            <div class="col-sm-10">
                                <%= f.check_box :notifications, data: { "on-text" => "SI", "off-text" => "NO"} %>
                            </div>
                        </div>
                        <div class="form-group pull-right">
                            <div class="col-sm-10">
                                <%= f.submit :class => 'btn btn-primary btn-lg', :value => 'Guardar' %>
                            </div>
                        </div>
                    <%end%>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingCat">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseCat" aria-expanded="false" aria-controls="collapseCat">
                    Cat&aacute;logos
                    </a>
              </h4>
            </div>
            <div id="collapseCat" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingCat">
                <div class="panel-body">
                    <div class= "col-lg-12 col-md-12 col-sm-12 col-xs-12" > 
                        <div class="sindri-catalog-container col-lg-3 col-md-3 col-sm-6 col-xs-12"> 
                            <%= image_tag "prioridades.png", :alt => "", :title => "Prioridades"%>
                            <div class="sindri-catalog col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <a href="#">Prioridades</a>
                            </div>
                        </div>
                        <div class="sindri-catalog-container col-lg-3 col-md-3 col-sm-6 col-xs-12">   
                            <%= image_tag "categorias.png", :alt => "", :title => "Categoria"%>
                            <div class="sindri-catalog col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <a href="#">Categorias</a>
                            </div>
                        </div>
                        <div class="sindri-catalog-container col-lg-3 col-md-3 col-sm-6 col-xs-12"> 
                            <%= image_tag "estados.png", :alt => "", :title => "Estado"%>
                            <div class="sindri-catalog col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <a href="#">Estados</a>
                            </div>
                        </div>
                        <div class="sindri-catalog-container col-lg-3 col-md-3 col-sm-6 col-xs-12"> 
                            <%= image_tag "cargos.png", :alt => "", :title => "Cargos"%>
                            <div class="sindri-catalog col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <a href="#">Cargos</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
